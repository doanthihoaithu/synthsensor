hydra:
  job:
    chdir: true  # to save objects in a working directory
  run:
    dir: .  # Disable Hydra's Directory Change

random:
  seed: 42

generation:
  plot_data: False
  mix_anomalies: False
  working_dir: generation
  config_dir: ${generation.working_dir}/config
  data_dir: ${generation.working_dir}/data
  used_settings: settings_three

#  mean_range: [3, 5, 7]
#  sd_range: [0.1, 0.2]
  global_noise_mean: 5
  global_noise_sd: 0.1
  global_crosscor_noise: 0
  global_max_spike_length: 10
  global_drift_duration: [30,70]
  add_background: True
#  poisson_k: 50
#  poisson_lambda: 3
#  background_rho_rw: 0
#  randomwalk_sd: 0.1
#  sine_amplitude: 1
#  sine_period: 20
#  background_phi: 0.8
#  background_rho: 0
#  alpha_ema: 0.3

  use_global_config: true
  sensor_data_generation_global_config:
    ar_1_process:
#      background:
#        poisson_noise_level: 5
#        moving_average_window: 100
      normal_noise:
        noise_mean: ${generation.global_noise_mean}
        noise_sd: ${generation.global_noise_sd}
      anomaly_noise:
        max_spike_length: ${generation.global_max_spike_length}
        spike_size_range: [ 3, 5 ]
        drift_duration: ${generation.global_drift_duration}
        drift_slope_range: [ -3, -2, 2, 3 ]
    random_walk:
#      background:
#        poisson_noise_level: 5
#        moving_average_window: 100
      normal_noise:
        noise_mean: ${generation.global_noise_mean}
        noise_sd: ${generation.global_noise_sd}
      anomaly_noise:
        max_spike_length: ${generation.global_max_spike_length}
        spike_size_range: [ 2, 2.5 ]
        drift_duration: ${generation.global_drift_duration}
        drift_slope_range: [ -3, -2, 2, 3 ]
    sine_wave:
#      background:
#        amplitude_range: [3,5,7]
#        period_range: [500, 700, 800]
      normal_noise:
        noise_mean: ${generation.global_noise_mean}
        noise_sd: 0.3
      anomaly_noise:
        max_spike_length: ${generation.global_max_spike_length}
        spike_size_range: [ 1.5, 2.5]
        drift_duration: ${generation.global_drift_duration}
        drift_slope_range: [ -2, -1, 1, 2 ]
    poisson_moving_average:
#      background:
#        poisson_noise_level: 5
#        moving_average_window: 100
      normal_noise:
        noise_mean: ${generation.global_noise_mean}
        noise_sd: ${generation.global_noise_sd}
      anomaly_noise:
        max_spike_length: ${generation.global_max_spike_length}
        spike_size_range: [1, 1.5]
        drift_duration: ${generation.global_drift_duration}
        drift_slope_range: [-2.5, -1.5, 1.5, 2.5 ]
#  global_spike_size: 1